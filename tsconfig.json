{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@Root/*": ["./*"],
      "@App/*": ["./src/app/*"],
      "@Modules/*": ["./src/modules/*"]
    }
  },
  "exclude": [
    "__tests__",
  ]
}
